<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

<!-- 1 Channel   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/notify_1CH_NotificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="notify_1CH_NotificationButtonClicked"
            android:text="[1] notification"
            android:textSize="11sp" />

        <Button android:id="@+id/notifyUnCancelable_1CH_NotificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" android:onClick="notifyUnCancelable_1CH_NotificationButtonClicked"
            android:backgroundTint="@color/black"
            android:text="[1] notification"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_1CH_NotificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancel_1CH_NotificationButtonClicked"
            android:text="cancel [1] notification"
            app:layout_constraintLeft_toLeftOf="@id/notify_1CH_NotificationButton"
            app:layout_constraintRight_toRightOf="@id/notifyUnCancelable_1CH_NotificationButton"
            app:layout_constraintTop_toBottomOf="@id/notify_1CH_NotificationButton" />
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

<!-- 2 Channel   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/notify_2CH_NotificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="notify_2CH_NotificationButtonClicked"
            android:text="[2] notification"
            android:textSize="11sp" />

        <Button android:id="@+id/notifyUnCancelable_2CH_NotificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" android:onClick="notifyUnCancelable_2CH_NotificationButtonClicked"
            android:backgroundTint="@color/black"
            android:text="[2] notification"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_2CH_NotificationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancel_2CH_NotificationButtonClicked"
            android:text="cancel [2] notification"
            app:layout_constraintLeft_toLeftOf="@id/notify_1CH_NotificationButton"
            app:layout_constraintRight_toRightOf="@id/notifyUnCancelable_1CH_NotificationButton"
            app:layout_constraintTop_toBottomOf="@id/notify_1CH_NotificationButton" />
    </LinearLayout>
</LinearLayout>